@using AssetManagement.Models

@{
    assetManagementEntities entities = new assetManagementEntities();
}

<h2 align="center">Employee List</h2>
<div align="right">
    @Html.ActionLink("Add New Employee", "addNewEmployee")
</div>

<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Designation
        </th>
        <th>
            Email ID
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var item in entities.employees)
    {
        <tr>
            <td>
                @Convert.ToString(item.first_name)
            </td>
            <td>
                @Convert.ToString(item.last_name)
            </td>
            <td>
                @Convert.ToString(item.designation)
            </td>
            <td>
                @Convert.ToString(item.email_id)
            </td>
            <td>
                @Convert.ToString(item.phone_number)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.employee_id })
            </td>
        </tr>
    }

</table>
